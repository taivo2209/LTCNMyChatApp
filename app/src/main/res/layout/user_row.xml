<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintRowUser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="10sp"
    android:descendantFocusability="blocksDescendants">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageBoxChat"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitXY"
        android:theme="@style/roundImageView" />

    <TextView
        android:id="@+id/txtUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0337445596"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@+id/imageBoxChat"
        app:layout_constraintTop_toTopOf="parent"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"/>
    <ImageView
        android:id="@+id/btnAddFriend"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/baseline_person_add_24"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnViewPage"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:text="View Profile Page"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:background="@drawable/rounded_button_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>