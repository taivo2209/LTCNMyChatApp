<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:background="#0343E5">

    <View
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginBottom="16sp"
        android:background="@drawable/background_content_top"
        app:layout_constraintBottom_toTopOf="@id/layoutSend"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#0343E5"
        app:layout_constraintBottom_toTopOf="@id/viewSupporter"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageBack"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="16sp"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="12sp"
        android:padding="5sp"
        android:src="@drawable/icon_btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProfileChat"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/imageBack"
        app:layout_constraintLeft_toRightOf="@+id/imageBack"
        app:layout_constraintBottom_toBottomOf="@+id/imageBack"
        android:src="@drawable/baseline_person_outline_24"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageInfo"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginTop="12sp"
        android:layout_marginEnd="16sp"
        android:layout_marginRight="16sp"
        android:padding="4sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_info"
        app:tint="@color/white"
        />
    <TextView
        android:id="@+id/txtUserChatName"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        android:ellipsize="end"
        android:paddingStart="15dp"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imageBack"
        app:layout_constraintEnd_toStartOf="@id/imageInfo"
        app:layout_constraintStart_toEndOf="@id/imageProfileChat"
        app:layout_constraintTop_toTopOf="@id/imageBack"
        />
    <View
        android:id="@+id/viewSupporter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12sp"
        app:layout_constraintTop_toBottomOf="@id/imageBack"/>

    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/idNestedSV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/viewBackground"
        app:layout_constraintTop_toBottomOf="@id/viewSupporter">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:overScrollMode="ifContentScrolls"
            android:padding="20sp"
            />
    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/progressBar"
        android:layout_width="25sp"
        android:layout_height="25sp"
        app:layout_constraintBottom_toBottomOf="@id/viewBackground"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground"
        app:layout_constraintStart_toStartOf="@id/viewBackground"
        app:layout_constraintTop_toTopOf="@id/viewBackground"
        />

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:id="@+id/layoutSend"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginEnd="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginBottom="12sp"
        android:background="@drawable/background_chat_input"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/sendMessageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4sp"
            android:layout_marginLeft="4sp"
            android:padding="8sp"
            android:src="@drawable/ic_send"
            app:tint="@color/white" />
    </FrameLayout>
    <EditText
        android:id="@+id/inputMessage"
        android:layout_width="0dp"
        android:layout_height="40sp"
        android:layout_marginStart="16sp"
        android:layout_marginLeft="16sp"
        android:layout_marginEnd="8sp"
        android:layout_marginRight="8sp"
        android:layout_marginBottom="12sp"
        android:background="@drawable/background_chat_input"
        android:hint="@string/type_a_message"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layoutSend"
        app:layout_constraintStart_toStartOf="parent"/>
    <Chronometer
        android:visibility="gone"
        android:id="@+id/recordTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iconMicro"
        app:layout_constraintTop_toTopOf="@+id/iconMicro"
        app:layout_constraintRight_toLeftOf="@id/iconMicro"
        android:layout_marginEnd="15dp"/>
    <ImageView
        android:id="@+id/iconCamera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@id/layoutSend"
        app:layout_constraintTop_toTopOf="@id/layoutSend"
        app:layout_constraintRight_toLeftOf="@id/iconMicro"
        android:src="@drawable/baseline_photo_camera_white_24"
        android:layout_marginEnd="15dp" />
    <ImageView
        android:id="@+id/iconMedia"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@id/layoutSend"
        app:layout_constraintTop_toTopOf="@id/layoutSend"
        app:layout_constraintRight_toLeftOf="@id/layoutSend"
        android:src="@drawable/ic_baseline_image_24"
        android:layout_marginEnd="15dp" />
    <ImageView
        android:id="@+id/iconMicro"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/layoutSend"
        app:layout_constraintTop_toTopOf="@id/layoutSend"
        app:layout_constraintRight_toLeftOf="@id/iconMedia"
        android:src="@drawable/baseline_mic_white_24" />
</androidx.constraintlayout.widget.ConstraintLayout>