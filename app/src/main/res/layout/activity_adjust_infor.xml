<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:padding="6dp">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_white_24"/>
            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Information"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:background="@drawable/border_line"
            android:layout_marginBottom="2dp"
            />
        <TextView

            android:id="@+id/txtChangeAvatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Avatar"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:background="@drawable/border_line"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:id="@+id/txtChangeBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Background"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:background="@drawable/border_line"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:id="@+id/txtChangeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Self introduction"
            android:textColor="@color/black"
            android:background="@drawable/border_line"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"

            />

    </LinearLayout>

</FrameLayout>