<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="7dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/senderRequestImageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/txtSenderRequestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize= "18dp"
        app:layout_constraintLeft_toRightOf="@id/senderRequestImageView"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/txtRequestDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15/05"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize= "18dp"
        app:layout_constraintLeft_toLeftOf="@id/txtSenderRequestName"
        app:layout_constraintTop_toBottomOf="@id/txtSenderRequestName"
        android:layout_marginTop="3dp"
        />
    <android.widget.Button
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button_white"
        android:layout_marginEnd="5dp"
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>